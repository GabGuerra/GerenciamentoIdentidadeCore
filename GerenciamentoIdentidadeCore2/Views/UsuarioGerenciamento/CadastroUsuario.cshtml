@Model
@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm("InserirUsuario", "Usuario", FormMethod.Post, new { style = "margin-top: 40px;", id="CadastroUsuarioGerenaForm" }))
{
    <div class="form-group">
        <label for="exampleInputEmail1">Nome</label>
        <input name="nome" type="text" class="form-control" placeholder="Nome">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">CPF</label>
        <input name="cpf" type="text" class="form-control" placeholder="CPF">
    </div>
    <div class="form-group form-check">
        <select name="selCargo" class="form-control">
            <option value="1">Assistente</option>
            <option value="2">Operador</option>
            <option value="3">Gerente</option>
            <option value="4">Admin</option>
        </select>
    </div>
    <button type="submit" value="submit" class="btn btn-primary">Registrar</button>
}

<style>
    .chkLabel {
        margin-left: 4px
    }

    .chkbox {
        margin-left: 4px
    }
</style>
