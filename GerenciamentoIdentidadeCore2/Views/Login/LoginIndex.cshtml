
@{
    ViewData["Title"] = "LoginIndex";
}

@Model
@{
    ViewBag.Title = "Index";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<body>
    <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-4">
                    <div id="login-box" class="col-md-12" style="border-radius:5% !important;">
                        <form id="LoginForm" class="form">
                            <div class="form-group">
                                <label for="inputEmailLogin">Email</label>
                                <input name="inputEmailLogin" type="email" class="form-control" aria-describedby="emailHelp" placeholder="E-mail">
                            </div>
                            <div class="form-group">
                                <label for="inputSenhaLogin">Senha</label>
                                <input name="inputSenhaLogin" type="password" class="form-control" placeholder="********" />
                            </div>
                            <div class="form-group">
                                <small id="emailHelp" class="form-text text-muted">Não possui uma conta? @Html.ActionLink("Crie agora.", "../Cadastro/Index")     </small>
                            </div>
                            <div class="form-group">
                                <button type="submit" value="submit" class="btn btn-success text-center" style="margin-left: 35%">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/Login/Login.js"></script>
<style>
    body {
        margin: 0;
        padding: 0;        
        height: 100vh;
    }

    #login .container #login-row #login-column #login-box {
        margin-top: 120px;
        max-width: 600px;
        height: 320px;
        border: 1px solid #9C9C9C;
        background-color: #EAEAEA;
    }

        #login .container #login-row #login-column #login-box #LoginForm {
            padding: 20px;
        }

            #login .container #login-row #login-column #login-box #LoginForm #register-link {
                margin-top: -85px;
            }
</style>

