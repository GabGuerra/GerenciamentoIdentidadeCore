@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@using System.Globalization
@inject IHttpContextAccessor HttpContextAccessor
@{ UsuarioVD usuario = JsonConvert.DeserializeObject<UsuarioVD>(HttpContextAccessor.HttpContext.Session.GetString("usuarioLogado"));}
<script src="~/js/Home/Home.js"></script>
<div class="text-center">
    <h1 class="display-4">Bem vindo, @CultureInfo.CurrentCulture.TextInfo.ToTitleCase(usuario.Nome)</h1>
    <div id="menuCards">
        <div class="row">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title" align="center">Funcionário</h5>
                    <a class="btn btn-success" onclick="RedirecionarCadastroFuncionario()">Cadastrar funcionário</a>
                </div>
            </div>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title" align="center">Módulo</h5>
                    <a class="btn btn-success" onclick="RedirecionarCadastroModulo()">Cadastrar módulo</a>
                </div>
            </div>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title" align="center">Perfil</h5>
                    <a class="btn btn-success" onclick="RedirecionarCadastroPerfil()">Cadastrar Perfil</a>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    #menuCards {
        margin-top: 20% !important;
        margin-left: 9% !important;
    }

    .card {
        margin-left: 5% !important;
    }

        .card a {
            margin-left: 0.8em;
        }

    a {
        color: #fff !important
    }
</style>